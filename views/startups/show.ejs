<div class="container">

  <div class="row" id="startupheader">
    <div class="col-lg-6 col-md-6">
      <h2 class="startupnamepage"><%= startup.name %></h2>
    </div>
    <div class="col-lg-6 col-md-6">
      <img class="logo" src="<%= startup.image %>" alt="<%= startup.name %>">
    </div>
  </div>

  <div class="row" id="startupdata">
    <div class="col-lg-8 col-md-8 borderbox">
      <div class="row" id="description">
        <%= startup.description %><br>
      </div>
      <div class="row">
        <%= startup.vision %><br>
      </div>
      <div class="row">
        <%= startup.mission %><br>
      </div>
    </div>
    <div class="col-lg-4 col-md-4">
      <div class="row">
        <%= startup.industry %><br>
      </div>
      <div class="row">
        <%= startup.founders %><br>
      </div>
      <div class="row">
        Founded in <%= startup.date %><br>
      </div>
      <div class="row">
        <%= startup.country %><br>
      </div>
    </div>
  </div>

<% if(locals.isAuthenticated) { %>
  <div class="row" id="leavecomments">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-12">
// put the name of the user
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <form method="POST" action="/startups/<%= startup.id %>/comments">
            <textarea name="content" id="content" placeholder="Comment" required maxlength="255"></textarea>
            <button class="button">Leave a comment</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } %>

  <div class="row" id="comments">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-12">
          <% startup.comments.forEach((comment) => { %>
            <small><%= comment.createdBy.username %></small>
          <% }) %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <% startup.comments.forEach((comment) => { %>
            <p><%= comment.content %></p>
          <% }) %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <% startup.comments.forEach((comment) => { %>
            <% if(locals.isAuthenticated && comment.belongsTo(user)) { %>
            <form method="POST" action="/startups/<%= startup.id %>/comments/<%= comment.id %>">
              <input type="hidden" name="_method" value="DELETE">
              <button class="button alert">Delete</button>
            </form>
            <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </div>


<% if(locals.isAuthenticated && startup.belongsTo(user)) { %>
  <div class="row" id="changecontent">
    <div class="col-lg-6 col-md-6">
      <a href="/startups/<%= startup.id %>/edit" class="button">Edit</a>
    </div>
    <div class="col-lg-6 col-md-6">
      <form method="POST" action="/startups/<%= startup.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <button class="button alert">Delete</button>
      </form>
    </div>
  </div>
<% } %>

</div>
